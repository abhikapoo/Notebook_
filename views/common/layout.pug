doctype html
html(data-bs-theme='light')
  head
    title= title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.bg-light
    include navbar
    
    .container-fluid
      .row
        // Sidebar
        .col-md-3.col-lg-2.d-md-block.bg-white.sidebar.collapse
          .position-sticky.pt-3
            ul.nav.flex-column
              li.nav-item
                a.nav-link.active(href='/')
                  i.bi.bi-house-door.me-2
                  | Dashboard
              li.nav-item
                a.nav-link(href='/notes')
                  i.bi.bi-journal-plus.me-2
                  | New Note
              li.nav-item
                a.nav-link(href='/reader')
                  i.bi.bi-book.me-2
                  | Reader
            
            hr
            h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
              span Recent Notes
              a.link-secondary(href='#')
                i.bi.bi-plus-circle
            ul.nav.flex-column.mb-2#recentNotes
              li.nav-item
                a.nav-link(href='#')
                  i.bi.bi-file-text.me-2
                  | Note 1
        
        // Main content
        main.col-md-9.ms-sm-auto.col-lg-10.px-md-4
          .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3
            // Breadcrumb
            nav(aria-label='breadcrumb')
              ol.breadcrumb
                li.breadcrumb-item
                  a(href='/') Home
                li.breadcrumb-item.active(aria-current='page')= title
          
          block content
    
    // Footer
    footer.footer.mt-auto.py-3.bg-white
      .container
        .row
          .col-12.col-md-4.mb-3
            h5 NoteBook
            p.text-muted A simple note-taking application
          .col-6.col-md-2.mb-3
            h5 Quick Links
            ul.nav.flex-column
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href='/') Home
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href='/about') About
          .col-6.col-md-2.mb-3
            h5 Resources
            ul.nav.flex-column
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href='#') Documentation
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href='#') Support
          .col-md-4.mb-3
            form
              h5 Subscribe to our newsletter
              .d-flex.flex-column.flex-sm-row.w-100.gap-2
                input#newsletter.form-control(type='email' placeholder='Email address')
                button.btn.btn-primary(type='button') Subscribe
  
  script(src="/js/bootstrap.bundle.min.js")
  script(src="/javascripts/theme.js")
